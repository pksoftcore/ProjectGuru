create table product (
	p_id int(12) PRIMARY KEY AUTO_INCREMENT,
	p_name varchar(30) NOT NULL,
    cat varchar(30) NOT NULL,
    dspt varchar(50) NOT NULL,
    price int(20) NOT NULL,
    stock int(30) NOT NULL,
    image BLOB NOT NULL
);


