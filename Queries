CREATE table users (
	u_id int PRIMARY KEY AUTO_INCREMENT,
    fname varchar(20),
    lname varchar(20),
    email varchar(20),
    contact varchar(12),
    dateofb date,
    address varchar(30),
    psw varchar(10)
);

