create table orders(
o_id int PRIMARY KEY AUTO_INCREMENT,
    o_date date,
    p_name varchar(40) NOT NULL,
    cat varchar(20) NOT NULL,
    price int NOT NULL,
    dspt varchar(50),
    FOREIGN KEY u_id REFERENCES users(u_id)
    
);